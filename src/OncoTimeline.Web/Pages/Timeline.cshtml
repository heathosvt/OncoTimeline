@page
@model TimelineModel
@{
    ViewData["Title"] = "Treatment Timeline";
}

<div x-data="{
    zoom: 'week',
    selectedCategory: 'all',
    showModal: false,
    selectedEvent: null,
    showAddForm: false,
    events: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Events)),
    phases: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Phases))
}" class="min-h-screen">

    <!-- Timeline Controls -->
    <div class="bg-white shadow-sm p-4 mb-6 rounded-lg">
        <div class="flex flex-wrap gap-4 items-center">
            <!-- Zoom Controls -->
            <div class="flex gap-2">
                <span class="text-sm font-medium text-gray-700 mr-2">Zoom:</span>
                <button @@click="zoom = 'day'" :class="zoom === 'day' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Day</button>
                <button @@click="zoom = 'week'" :class="zoom === 'week' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Week</button>
                <button @@click="zoom = 'month'" :class="zoom === 'month' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Month</button>
                <button @@click="zoom = 'full'" :class="zoom === 'full' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Full</button>
            </div>

            <!-- Category Filter -->
            <div class="flex gap-2 items-center">
                <span class="text-sm font-medium text-gray-700">Filter:</span>
                <select x-model="selectedCategory" class="border border-gray-300 rounded px-3 py-1 text-sm">
                    <option value="all">All Events</option>
                    <option value="Chemotherapy">Chemotherapy</option>
                    <option value="Lab">Lab Work</option>
                    <option value="Hospital">Hospital</option>
                    <option value="Symptom">Symptoms</option>
                    <option value="Note">Notes</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Treatment Phases Bar -->
    <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Treatment Phases</h3>
        <div class="space-y-2">
            <template x-for="phase in phases" :key="phase.id">
                <div class="phase-bar text-white font-semibold px-4 py-3 rounded-lg shadow" :style="`background-color: ${phase.color}`">
                    <span x-text="phase.name"></span>
                    <span class="text-sm opacity-90 ml-2" x-text="`(${new Date(phase.startDate).toLocaleDateString()})`"></span>
                </div>
            </template>
        </div>
    </div>

    <!-- Timeline Canvas -->
    <div class="bg-white rounded-lg shadow-lg p-6 overflow-x-auto">
        <div class="relative min-h-[400px]" style="min-width: 2000px;">
            <!-- Event Markers -->
            <template x-for="(event, index) in events.filter(e => selectedCategory === 'all' || e.category === selectedCategory)" :key="event.id">
                <div @@click="selectedEvent = event; showModal = true" 
                     class="event-marker absolute cursor-pointer bg-white rounded-full shadow-lg hover:shadow-xl transition-all duration-200 flex items-center justify-center text-2xl"
                     :style="`left: ${index * 100}px; top: ${Math.random() * 200 + 50}px;`">
                    <span x-text="event.category === 'Chemotherapy' ? 'ðŸ’‰' : event.category === 'Hospital' ? 'ðŸ¥' : event.category === 'Lab' ? 'ðŸ”¬' : event.category === 'Symptom' ? 'ðŸ˜·' : 'ðŸ“'"></span>
                </div>
            </template>
        </div>
    </div>

    <!-- Event Detail Modal -->
    <div x-show="showModal" 
         x-transition:enter="transition ease-out duration-300"
         x-transition:leave="transition ease-in duration-200"
         @@click.away="showModal = false"
         class="fixed inset-0 z-50 overflow-y-auto" 
         style="display: none;">
        <div class="flex items-center justify-center min-h-screen px-4">
            <div class="fixed inset-0 bg-black opacity-50"></div>
            <div class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full p-6">
                <button @@click="showModal = false" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
                
                <template x-if="selectedEvent">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-4" x-text="selectedEvent.title"></h2>
                        <div class="space-y-4">
                            <div>
                                <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full" x-text="selectedEvent.category"></span>
                                <span class="text-gray-600 ml-2" x-text="new Date(selectedEvent.eventDate).toLocaleDateString()"></span>
                            </div>
                            <div x-show="selectedEvent.drugs && selectedEvent.drugs.length > 0">
                                <h3 class="font-semibold text-gray-900 mb-2">Drugs:</h3>
                                <template x-for="drug in selectedEvent.drugs" :key="drug.id">
                                    <div class="bg-gray-50 p-3 rounded mb-2">
                                        <p class="font-medium" x-text="drug.name"></p>
                                        <p class="text-sm text-gray-600" x-text="`${drug.dosage} - ${drug.route}`"></p>
                                    </div>
                                </template>
                            </div>
                            <div x-show="selectedEvent.notes">
                                <h3 class="font-semibold text-gray-900 mb-2">Notes:</h3>
                                <p class="text-gray-700" x-text="selectedEvent.notes"></p>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>

    <!-- Quick Add Floating Button -->
    <button @@click="showAddForm = true" class="fixed bottom-8 right-8 bg-blue-600 hover:bg-blue-700 text-white rounded-full w-16 h-16 flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-200">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
    </button>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
}
