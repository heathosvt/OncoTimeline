@page
@model TimelineModel
@{
    ViewData["Title"] = "Treatment Timeline";
}

<div class="min-h-screen">

    <!-- Timeline Controls -->
    <div class="bg-white shadow-sm p-4 mb-6 rounded-lg">
        <div class="flex flex-wrap gap-4 items-center">
            <!-- Zoom Controls -->
            <div class="flex gap-2">
                <span class="text-sm font-medium text-gray-700 mr-2">Zoom:</span>
                <button @@click="zoom = 'day'" :class="zoom === 'day' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Day</button>
                <button @@click="zoom = 'week'" :class="zoom === 'week' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Week</button>
                <button @@click="zoom = 'month'" :class="zoom === 'month' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Month</button>
                <button @@click="zoom = 'full'" :class="zoom === 'full' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'" class="px-3 py-1 rounded text-sm font-medium">Full</button>
            </div>

            <!-- Category Filter -->
            <div class="flex gap-2 items-center">
                <span class="text-sm font-medium text-gray-700">Filter:</span>
                <select x-model="selectedCategory" class="border border-gray-300 rounded px-3 py-1 text-sm">
                    <option value="all">All Events</option>
                    <option value="Chemotherapy">Chemotherapy</option>
                    <option value="Lab">Lab Work</option>
                    <option value="Hospital">Hospital</option>
                    <option value="Symptom">Symptoms</option>
                    <option value="Note">Notes</option>
                </select>
            </div>
        </div>
    </div>

    <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Treatment Phases</h3>
        @if(Model.Phases.Any())
        {
            <div class="space-y-2">
                @foreach(var phase in Model.Phases)
                {
                    <div class="phase-bar text-white font-semibold px-4 py-3 rounded-lg shadow" style="background-color: @phase.Color">
                        <span>@phase.Name</span>
                        <span class="text-sm opacity-90 ml-2">(@phase.StartDate.ToShortDateString() - @(phase.EndDate?.ToShortDateString() ?? "Ongoing"))</span>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500">No treatment phases defined</p>
        }
    </div>

    <!-- Timeline Canvas -->
    <div class="bg-white rounded-lg shadow-lg p-6 overflow-x-auto">
        @if(Model.Events.Any())
        {
            <div class="relative" style="min-height: 300px;">
                <!-- Timeline Line -->
                <div class="absolute top-1/2 left-0 right-0 h-1 bg-gray-200" style="transform: translateY(-50%);"></div>
                
                <!-- Event Markers -->
                @foreach(var (evt, index) in Model.Events.Select((e, i) => (e, i)))
                {
                    var leftPosition = (index * 250) + 50;
                    <div class="absolute" style="left: @(leftPosition)px; top: 50%; transform: translateY(-50%);">
                        <!-- Marker -->
                        <div class="event-marker cursor-pointer" 
                             onclick="document.getElementById('event-@evt.Id').style.display='block'">
                            <span>@(evt.Category == "Chemotherapy" ? "üíâ" : evt.Category == "Hospital" ? "üè•" : evt.Category == "Lab" ? "üî¨" : evt.Category == "Symptom" ? "üò∑" : "üìù")</span>
                        </div>
                        <!-- Label -->
                        <div class="text-center mt-16 w-32" style="margin-left: -40px;">
                            <p class="text-xs font-semibold text-gray-900">@evt.Title</p>
                            <p class="text-xs text-gray-500">@evt.EventDate.ToShortDateString()</p>
                        </div>
                    </div>
                    
                    <!-- Event Modal -->
                    <div id="event-@evt.Id" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden" 
                         onclick="if(event.target === this) this.style.display='none'">
                        <div class="flex items-center justify-center min-h-screen px-4">
                            <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full p-6">
                                <div class="flex justify-between items-start mb-4">
                                    <h2 class="text-2xl font-bold text-gray-900">@evt.Title</h2>
                                    <button onclick="document.getElementById('event-@evt.Id').style.display='none'" 
                                            class="text-gray-400 hover:text-gray-600">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div class="space-y-4">
                                    <div>
                                        <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">@evt.Category</span>
                                        <span class="text-gray-600 ml-2">@evt.EventDate.ToLongDateString()</span>
                                    </div>
                                    @if(!string.IsNullOrEmpty(evt.Notes))
                                    {
                                        <div>
                                            <h3 class="font-semibold text-gray-900 mb-2">Notes:</h3>
                                            <p class="text-gray-700">@evt.Notes</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-gray-500">No events to display</p>
            </div>
        }
    </div>

    <!-- Quick Add Floating Button -->
    <button class="fixed bottom-8 right-8 bg-blue-600 hover:bg-blue-700 text-white rounded-full w-16 h-16 flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-200">
        <i data-lucide="plus" class="w-8 h-8"></i>
    </button>

</div>
