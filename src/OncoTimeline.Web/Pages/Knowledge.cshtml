@page
@model KnowledgeModel
@{
    ViewData["Title"] = "Knowledge Hub";
}

<div x-data='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
    audience = "NonTechnical",
    category = "All",
    searchQuery = ""
}))' class="max-w-7xl mx-auto px-4 py-8">

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">B-ALL Knowledge Hub</h1>
        <p class="text-gray-600">Educational resources about B-ALL treatment, side effects, and recovery</p>
        <p class="text-sm text-amber-600 mt-2">⚠️ AI-generated content for educational purposes only. Always consult your medical team.</p>
    </div>

    <!-- Controls -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <!-- Audience Toggle -->
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Content Level</label>
            <div class="flex gap-2">
                <button @@click="audience = 'NonTechnical'" 
                    :class="audience === 'NonTechnical' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'"
                    class="px-4 py-2 rounded-lg font-medium transition">
                    Parent-Friendly
                </button>
                <button @@click="audience = 'Technical'" 
                    :class="audience === 'Technical' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'"
                    class="px-4 py-2 rounded-lg font-medium transition">
                    Medical Detail
                </button>
            </div>
        </div>

        <!-- Category Filter -->
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
            <select x-model="category" class="w-full md:w-64 px-4 py-2 border border-gray-300 rounded-lg">
                <option value="All">All Categories</option>
                <option value="TreatmentPhase">Treatment Phases</option>
                <option value="SideEffect">Side Effects</option>
                <option value="LabValue">Lab Values</option>
                <option value="Procedure">Procedures</option>
                <option value="Recovery">Recovery</option>
            </select>
        </div>

        <!-- Search -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
            <input type="text" x-model="searchQuery" placeholder="Search articles..." 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg">
        </div>
    </div>

    <!-- Articles Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach(var article in Model.Articles)
        {
            <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition cursor-pointer"
                @@click="$dispatch('open-article', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(article)))">
                <div class="flex items-start justify-between mb-3">
                    <span class="text-xs font-semibold px-2 py-1 rounded bg-blue-100 text-blue-800">@article.Category</span>
                    <span class="text-xs text-gray-500">@(article.IsAIGenerated ? "AI Generated" : "")</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">@article.Title</h3>
                <p class="text-sm text-gray-600">@article.Summary</p>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if(!Model.Articles.Any())
    {
        <div class="text-center py-12">
            <p class="text-gray-500">No articles found.</p>
        </div>
    }

    <!-- Article Modal -->
    <div x-data="{ open: false, article: null }" 
        @@open-article.window="open = true; article = $event.detail"
        x-show="open" 
        class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50"
        style="display: none;">
        <div @@click.away="open = false" class="bg-white rounded-lg max-w-2xl w-full max-h-[80vh] overflow-y-auto p-6">
            <template x-if="article">
                <div>
                    <div class="flex justify-between items-start mb-4">
                        <h2 class="text-2xl font-bold text-gray-900" x-text="article.title"></h2>
                        <button @@click="open = false" class="text-gray-400 hover:text-gray-600">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="mb-4">
                        <span class="text-xs font-semibold px-2 py-1 rounded bg-blue-100 text-blue-800" 
                            x-text="article.category"></span>
                    </div>
                    <div class="prose max-w-none">
                        <p class="text-gray-700 whitespace-pre-line" x-text="article.content"></p>
                    </div>
                    <div class="mt-6 pt-4 border-t border-gray-200">
                        <p class="text-xs text-amber-600">⚠️ This content is AI-generated for educational purposes. Always consult your medical team for personalized advice.</p>
                    </div>
                </div>
            </template>
        </div>
    </div>

</div>
