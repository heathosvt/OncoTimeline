@page
@model DrugsModel
@{
    ViewData["Title"] = "Drug Database";
}

<div x-data='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
    searchQuery = "",
    filteredDrugs = Model.Drugs
}))' class="max-w-7xl mx-auto px-4 py-8">

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Drug Database</h1>
        <p class="text-gray-600">Comprehensive information about B-ALL treatment medications</p>
    </div>

    <!-- Search -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Search Drugs</label>
        <input type="text" x-model="searchQuery" placeholder="Search by name or category..." 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg">
    </div>

    <!-- Drugs Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach(var drug in Model.Drugs)
        {
            <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition cursor-pointer"
                @@click="$dispatch('open-drug', @Html.Raw(System.Text.Json.JsonSerializer.Serialize(drug)))">
                <div class="mb-3">
                    <span class="text-xs font-semibold px-2 py-1 rounded bg-purple-100 text-purple-800">@drug.DrugClass</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">@drug.Name</h3>
                <p class="text-sm text-gray-600 mb-3">@drug.DrugClass</p>
                <p class="text-sm text-gray-700">@drug.WhyUsedInLeukemia</p>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if(!Model.Drugs.Any())
    {
        <div class="text-center py-12">
            <p class="text-gray-500">No drugs found.</p>
        </div>
    }

    <!-- Drug Detail Modal -->
    <div x-data="{ open: false, drug: null, activeTab: 'parent' }" 
        @@open-drug.window="open = true; drug = $event.detail; activeTab = 'parent'"
        x-show="open" 
        class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50"
        style="display: none;">
        <div @@click.away="open = false" class="bg-white rounded-lg max-w-3xl w-full max-h-[80vh] overflow-y-auto">
            <template x-if="drug">
                <div>
                    <!-- Header -->
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <h2 class="text-2xl font-bold text-gray-900" x-text="drug.name"></h2>
                                <p class="text-gray-600" x-text="drug.drugClass"></p>
                            </div>
                            <button @@click="open = false" class="text-gray-400 hover:text-gray-600">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="mb-4">
                            <span class="text-xs font-semibold px-2 py-1 rounded bg-purple-100 text-purple-800" 
                                x-text="drug.drugClass"></span>
                        </div>

                    <!-- Tabs -->
                    <div class="border-b border-gray-200">
                        <div class="flex">
                            <button @@click="activeTab = 'parent'" 
                                :class="activeTab === 'parent' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500'"
                                class="px-6 py-3 border-b-2 font-medium">
                                Parent Info
                            </button>
                            <button @@click="activeTab = 'technical'" 
                                :class="activeTab === 'technical' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500'"
                                class="px-6 py-3 border-b-2 font-medium">
                                Technical
                            </button>
                        </div>
                    </div>

                    <!-- Tab Content -->
                    <div class="p-6">
                        <!-- Parent Tab -->
                        <div x-show="activeTab === 'parent'">
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">What It Does</h3>
                                <p class="text-gray-700" x-text="drug.whyUsedInLeukemia"></p>
                            </div>
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">What to Watch For</h3>
                                <p class="text-gray-700" x-text="drug.parentFriendlyExplanation"></p>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Common Side Effects</h3>
                                <ul class="list-disc list-inside space-y-1">
                                    <template x-for="effect in drug.sideEffects.filter(se => se.severity === 'Common')">
                                        <li class="text-gray-700">
                                            <span x-text="effect.effectName"></span> - <span x-text="effect.description"></span>
                                        </li>
                                    </template>
                                </ul>
                            </div>
                        </div>

                        <!-- Technical Tab -->
                        <div x-show="activeTab === 'technical'">
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Mechanism of Action</h3>
                                <p class="text-gray-700" x-text="drug.mechanismOfAction"></p>
                            </div>
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Timing & Duration</h3>
                                <p class="text-gray-700"><strong>Onset:</strong> <span x-text="drug.typicalOnsetTiming"></span></p>
                                <p class="text-gray-700"><strong>Duration:</strong> <span x-text="drug.durationOfEffects"></span></p>
                            </div>
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Expected Lab Changes</h3>
                                <p class="text-gray-700" x-text="drug.expectedLabChanges"></p>
                            </div>
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">Neurological Impacts</h3>
                                <p class="text-gray-700" x-text="drug.neurologicalImpacts"></p>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 mb-2">All Side Effects</h3>
                                <div class="space-y-3">
                                    <template x-for="effect in drug.sideEffects">
                                        <div class="border-l-4 pl-3" :class="{
                                            'border-yellow-400': effect.severity === 'Common',
                                            'border-orange-400': effect.severity === 'Moderate',
                                            'border-red-400': effect.severity === 'Severe'
                                        }">
                                            <div class="flex items-center gap-2 mb-1">
                                                <span class="text-xs font-semibold px-2 py-1 rounded" :class="{
                                                    'bg-yellow-100 text-yellow-800': effect.severity === 'Common',
                                                    'bg-orange-100 text-orange-800': effect.severity === 'Moderate',
                                                    'bg-red-100 text-red-800': effect.severity === 'Severe'
                                                }" x-text="effect.severity"></span>
                                                <strong x-text="effect.effectName"></strong>
                                            </div>
                                            <p class="text-sm text-gray-700" x-text="effect.description"></p>
                                            <p class="text-xs text-gray-500 mt-1">Onset: <span x-text="effect.typicalOnset"></span></p>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </template>
        </div>
    </div>

</div>
